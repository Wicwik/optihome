# OptiHome Server Deployment Configuration
# Copy this to .env and replace YOUR_SERVER_IP with your actual server IP address

# Database Configuration
POSTGRES_USER=opti
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=optihome

# Backend Configuration
DATABASE_URL=postgresql+psycopg2://opti:change_this_secure_password@db:5432/optihome

# CORS - Replace YOUR_SERVER_IP with your server's IP address
# Example: CORS_ORIGINS=http://192.168.1.100:5173,http://localhost:5173
CORS_ORIGINS=http://YOUR_SERVER_IP:5173,http://localhost:5173

# Frontend API URL - Replace YOUR_SERVER_IP with your server's IP address
# This is the URL the browser will use to connect to the backend
# Example: VITE_API_BASE_URL=http://192.168.1.100:8000
VITE_API_BASE_URL=http://YOUR_SERVER_IP:8000

# Optional: Scheduler Configuration
ENABLE_SCHEDULER=false
SCHEDULE_HOUR=2
SCHEDULE_MINUTE=0
SCRAPE_PAGES_PER_RUN=5
